{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Main Application",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/src/index.js",
            "console": "integratedTerminal",
            "skipFiles": ["<node_internals>/**"],
            "env": {
                "NODE_ENV": "development"
            }
        },
        {
            "name": "Debug Console Examples",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/src/console/console-methods.js",
            "console": "integratedTerminal",
            "skipFiles": ["<node_internals>/**"]
        },
        {
            "name": "Debug Error Handling",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/src/errors/try-catch.js",
            "console": "integratedTerminal",
            "skipFiles": ["<node_internals>/**"]
        },
        {
            "name": "Debug Async Code",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/src/async/promises.js",
            "console": "integratedTerminal",
            "skipFiles": ["<node_internals>/**"]
        },
        {
            "name": "Debug Performance Issues",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/src/performance/memory-leaks.js",
            "console": "integratedTerminal",
            "skipFiles": ["<node_internals>/**"]
        },
        {
            "name": "Debug Tests",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/node_modules/.bin/jest",
            "args": ["--runInBand"],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "skipFiles": ["<node_internals>/**"]
        },
        {
            "name": "Attach to Node Process",
            "type": "node",
            "request": "attach",
            "port": 9229,
            "skipFiles": ["<node_internals>/**"]
        },
        {
            "name": "Debug Current File",
            "type": "node",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "skipFiles": ["<node_internals>/**"]
        },
        {
            "name": "Debug with Chrome DevTools",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/src/index.js",
            "console": "integratedTerminal",
            "port": 9229,
            "skipFiles": ["<node_internals>/**"]
        }
    ]
}
