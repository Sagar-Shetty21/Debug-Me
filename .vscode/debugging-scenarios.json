{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "üöÄ Debug Current File",
            "type": "node",
            "request": "launch",
            "program": "${file}",
            "skipFiles": ["<node_internals>/**"],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "name": "üéØ Debug Main App",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/src/index.js",
            "skipFiles": ["<node_internals>/**"],
            "console": "integratedTerminal",
            "env": {
                "NODE_ENV": "development",
                "DEBUG": "*"
            }
        },
        {
            "name": "üåê Debug Express Server",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/src/server.js",
            "skipFiles": ["<node_internals>/**"],
            "console": "integratedTerminal",
            "env": {
                "NODE_ENV": "development",
                "PORT": "3000"
            },
            "restart": true,
            "runtimeArgs": ["--inspect"],
            "autoAttachChildProcesses": true
        },
        {
            "name": "üîó Attach to Running Process",
            "type": "node",
            "request": "attach",
            "port": 9229,
            "skipFiles": ["<node_internals>/**"],
            "localRoot": "${workspaceFolder}",
            "remoteRoot": "."
        },
        {
            "name": "üß™ Debug Jest Tests",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/node_modules/.bin/jest",
            "args": ["--runInBand", "--no-cache", "--testTimeout=30000"],
            "skipFiles": ["<node_internals>/**"],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "env": {
                "NODE_ENV": "test"
            }
        },
        {
            "name": "üé™ Debug Jest Single Test",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/node_modules/.bin/jest",
            "args": ["--runInBand", "--no-cache", "${fileBasenameNoExtension}"],
            "skipFiles": ["<node_internals>/**"],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "name": "üì¶ Debug npm Script",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run", "debug"],
            "skipFiles": ["<node_internals>/**"],
            "console": "integratedTerminal"
        },
        {
            "name": "‚ö° Debug with Nodemon",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/node_modules/nodemon/bin/nodemon.js",
            "args": ["src/index.js"],
            "skipFiles": ["<node_internals>/**"],
            "console": "integratedTerminal",
            "restart": true,
            "env": {
                "NODE_ENV": "development"
            }
        },
        {
            "name": "üîß Debug TypeScript",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/src/index.ts",
            "preLaunchTask": "tsc: build",
            "outFiles": ["${workspaceFolder}/dist/**/*.js"],
            "skipFiles": ["<node_internals>/**"],
            "console": "integratedTerminal"
        },
        {
            "name": "‚ö° Debug TypeScript (ts-node)",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/src/index.ts",
            "runtimeArgs": ["-r", "ts-node/register"],
            "skipFiles": ["<node_internals>/**"],
            "console": "integratedTerminal",
            "env": {
                "TS_NODE_FILES": "true"
            }
        },
        {
            "name": "üåê Debug Browser (Chrome)",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}/public",
            "sourceMaps": true,
            "userDataDir": "${workspaceFolder}/.vscode/chrome-debug-profile",
            "runtimeArgs": [
                "--disable-web-security",
                "--allow-running-insecure-content"
            ]
        },
        {
            "name": "üîó Attach to Chrome",
            "type": "chrome",
            "request": "attach",
            "port": 9222,
            "webRoot": "${workspaceFolder}/public",
            "sourceMaps": true
        },
        {
            "name": "ü¶ä Debug Firefox",
            "type": "firefox",
            "request": "launch",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}/public",
            "firefoxExecutable": "/usr/bin/firefox"
        },
        {
            "name": "üé≠ Debug Playwright Tests",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/node_modules/.bin/playwright",
            "args": ["test", "--debug"],
            "skipFiles": ["<node_internals>/**"],
            "console": "integratedTerminal"
        },
        {
            "name": "üé™ Debug Mocha Tests",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/node_modules/.bin/mocha",
            "args": ["--recursive", "--timeout", "5000", "test/**/*.js"],
            "skipFiles": ["<node_internals>/**"],
            "console": "integratedTerminal"
        },
        {
            "name": "üîç Debug with Environment Variables",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/src/index.js",
            "skipFiles": ["<node_internals>/**"],
            "console": "integratedTerminal",
            "env": {
                "NODE_ENV": "development",
                "DEBUG": "app:*",
                "LOG_LEVEL": "debug",
                "DATABASE_URL": "mongodb://localhost:27017/debugme"
            },
            "envFile": "${workspaceFolder}/.env"
        },
        {
            "name": "üê≥ Debug in Docker Container",
            "type": "node",
            "request": "attach",
            "port": 9229,
            "address": "localhost",
            "localRoot": "${workspaceFolder}",
            "remoteRoot": "/app",
            "skipFiles": ["<node_internals>/**"]
        },
        {
            "name": "üîó Debug Remote Process",
            "type": "node",
            "request": "attach",
            "address": "192.168.1.100",
            "port": 9229,
            "localRoot": "${workspaceFolder}",
            "remoteRoot": "/var/www/app",
            "skipFiles": ["<node_internals>/**"]
        },
        {
            "name": "‚öôÔ∏è Debug Worker Thread",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/src/worker.js",
            "skipFiles": ["<node_internals>/**"],
            "console": "integratedTerminal",
            "autoAttachChildProcesses": true
        },
        {
            "name": "üîÑ Debug Child Process",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/src/parent.js",
            "skipFiles": ["<node_internals>/**"],
            "console": "integratedTerminal",
            "autoAttachChildProcesses": true
        },
        {
            "name": "üì± Debug React App",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}/src",
            "sourceMaps": true,
            "diagnosticLogging": true,
            "runtimeArgs": ["--disable-dev-shm-usage"]
        },
        {
            "name": "‚ö° Debug Next.js App",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}",
            "sourceMaps": true,
            "sourceMapPathOverrides": {
                "webpack:///./*": "${webRoot}/*",
                "webpack:///src/*": "${webRoot}/*",
                "webpack:///*": "*"
            }
        },
        {
            "name": "üéØ Debug with Custom Args",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/src/cli.js",
            "args": ["--config", "debug.json", "--verbose"],
            "skipFiles": ["<node_internals>/**"],
            "console": "integratedTerminal"
        },
        {
            "name": "üö® Debug with Error Handling",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/src/index.js",
            "skipFiles": ["<node_internals>/**"],
            "console": "integratedTerminal",
            "stopOnEntry": false,
            "runtimeArgs": ["--unhandled-rejections=strict"]
        }
    ],
    "compounds": [
        {
            "name": "üé™ Full Stack Debug (Server + Client)",
            "configurations": [
                "üåê Debug Express Server",
                "üåê Debug Browser (Chrome)"
            ]
        },
        {
            "name": "üß™ Test Environment",
            "configurations": [
                "üß™ Debug Jest Tests",
                "üåê Debug Browser (Chrome)"
            ]
        }
    ]
}
