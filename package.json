{
    "name": "js-debugging-mastery",
    "version": "1.0.0",
    "description": "Comprehensive JavaScript debugging practice project covering all debugging techniques",
    "main": "src/index.js",
    "scripts": {
        "start": "node src/index.js",
        "dev": "nodemon src/index.js",
        "debug": "node --inspect-brk src/index.js",
        "debug-chrome": "node --inspect src/index.js",
        "test": "jest",
        "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
        "serve": "http-server public -p 8080 -o",
        "lint": "eslint src/",
        "profile": "node --prof src/performance/performance-issues.js"
    },
    "devDependencies": {
        "nodemon": "^3.0.1",
        "http-server": "^14.1.1",
        "jest": "^29.7.0",
        "eslint": "^8.50.0"
    },
    "dependencies": {
        "axios": "^1.5.0",
        "express": "^4.18.2"
    },
    "keywords": [
        "debugging",
        "javascript",
        "development",
        "education"
    ],
    "author": "Your Name",
    "license": "MIT"
}
